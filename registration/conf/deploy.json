{
  "defaultStacks": [ "mobile-notifications" ],
  "packages": {
    "mobile-notifications-registration": {
      "type": "autoscaling",
      "data": {
        "secondsToWait": 900,
        "port": 18080,
        "healthcheckGrace": 20,
        "warmupGrace": 30,
        "bucket": "mobile-notifications-dist",
        "healthcheck_paths": ["/healthcheck"],
        "publicReadAcl": false
      }
    }
  },
  "recipes":{
    "default": {
      "depends" : ["artifactUpload", "deploy"]
    },
    "deploy": {
      "actionsBeforeApp": ["mobile-notifications-registration.deploy"]
    },
    "artifactUpload": {
      "actionsBeforeApp": ["mobile-notifications-registration.uploadArtifacts"]
    }
  }
}
